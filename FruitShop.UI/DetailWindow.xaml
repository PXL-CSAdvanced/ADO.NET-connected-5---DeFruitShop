<Window x:Class="FruitShop.UI.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FruitShop.UI"
        mc:Ignorable="d"
        Title="DetailWindow" Height="400" Width="400">
    <StackPanel Margin="10" Grid.Column="1">
        <Label Content="Id: " Margin="5"/>
        <TextBox x:Name="idTextBox" Padding="5" Margin="5" IsReadOnly="True"/>
        <Label Content="Naam: " Margin="5"/>
        <TextBox x:Name="nameTextBox" Padding="5" Margin="5" />
        <Label Content="Kleur: " Margin="5"/>
        <TextBox x:Name="colorTextBox" Padding="5" Margin="5" />
        <Label Content="Seizoen: " Margin="5"/>
        <ComboBox x:Name="seasonTextBox" Padding="5" Margin="5" >
            <ComboBoxItem>Lente</ComboBoxItem>
            <ComboBoxItem>Zomer</ComboBoxItem>
            <ComboBoxItem>Herfst</ComboBoxItem>
            <ComboBoxItem>Winter</ComboBoxItem>
            <ComboBoxItem>Hele jaar</ComboBoxItem>
        </ComboBox>

        <Grid Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="saveButton" Grid.Column="0" Margin="5" Padding="10" Content="Bewaren"/>
            <Button x:Name="cancelButton" Grid.Column="1" Margin="5" Padding="10" Content="Annuleren"/>
        </Grid>

    </StackPanel>
</Window>
